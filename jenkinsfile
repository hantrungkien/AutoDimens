def err = null
try {
    node {
        stage('Clean Build') {
            step {
                sh './gradlew clean'
            }
        }

        stage('ktlint') {
            step {
                sh './gradlew ktlintCheck'
            }
        }

        stage('Build release') {
            step {
                sh './gradlew uploadDeployGateRelease'
            }
        }
    }

} catch (caughtError) {
    err = caughtError
    currentBuild.result = "FAILURE"
} finally {
    if (currentBuild.result == "FAILURE") {
        sh "echo 'Build FAILURE'"
    } else {
        sh "echo 'Build SUCCESSFUL'"
    }
}